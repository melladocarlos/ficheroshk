<div id="fullConten">

<div id="titulo", class="colorCeleste">Nuevo Examen</div>
<div id="texto2">
<%= simple_form_for @examen, :url => examen_path(@examen) , :method => 'put' do |f| %>
	<%= f.input :ficha_id, :collection => Ficha.all(:order=>'nombre'), :selected => :nombre,:label_method=> :nombre%>	
	<%= f.input :fecha, as: :date, start_year: Date.today.year+1,:use_month_numbers => true, end_year: Date.today.year-110, order: [:day,:month, :year]%>
	<label>Pagado :</label> 
	<%= f.select :pagado, [ 'Si', 'No']%>
	<%= f.input :detalle,:placeholder => 'Ingrese un detalle, grado u otro dato relevante.', input_html: { maxlength: 150, pattern:"[A-Z a-z]{2,25}" }%>
    
	



<%= f.submit "Agregar Nuevo Examen" ,:id => "botonIzq",:class=>"colorCeleste"%> 
<%= link_to "Cancelar", examens_path , :confirm => "Â¿Volver?",:id => "botonIzq",:class=>"colorCeleste"   %>
<% end %>
</div></div>