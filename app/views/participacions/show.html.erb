<h1>Participaciones De <%= @ficha.nombre %></h1>


<table id="contenPost">   
   <th id = "botonCeleste" >Evento</th>
  <th id = "botonCeleste" ><%=  "Fecha" %></th>  
  
   <th id = "botonCeleste" ><%=  "Detalle" %></th> 
  
  
  <% for participacion in @participacions %>  
  <tr >      	
	<td ><%=  Evento.find_by_id(participacion.evento_id).nombre%></td>
    <td ><%=  participacion.fecha%></td>  
    <td><%= participacion.detalle %></td> 

  </tr>  
  <% end %>  
</table>  
  
<%= link_to "Agregar nueva participacion", new_participacion_path  ,:id => "botonIzq" ,:class=>"colorCeleste"%> 
